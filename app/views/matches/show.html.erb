<%= image_tag @random_user.avatar_url %>
<p><%= @random_user.login %></p>

<h4>Description</h4>
<%= @random_user.description %>

<h4>Preferred Languages</h4>
<ul class="preferred-languages">
  <% @random_user.languages.each do |lang| %>
    <li><%= lang.name %></li>
  <% end %>
</ul>

<%= button_to "Approve", match_path(@random_user), params: { status: "pending" }, action: :update, method: :patch %>
<%= button_to "Reject", match_path(@random_user),  params: { status: "rejected" },  action: :update, method: :patch %>
