<!DOCTYPE html>
<html>
  <head>
    <title>Pairr</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <%= render "layouts/navbar" %>

    <% flash.each do |name, message| %>
      <div class="container">
        <div class="card-panel teal lighten-5">
          <%= content_tag :div, message, class: name %>
        </div>
      </div>
    <% end %>

    <%= yield %>

  </body>
</html>
